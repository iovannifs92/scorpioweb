@model PaginatedList<scorpioweb.Models.SupervisionPyCP>
    

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

    <script type="text/javascript">
        var tipo = 0;
        $(document).ready(function () {
            $('#supervisionE').on("change", function (e) {
                e.preventDefault();
                var s = document.getElementById("supervisionE");
                var supervisionE = s.options[s.selectedIndex].value;
                $.ajax({
                    type: "POST",
                    dataType: "json",
                    url: "/Supervisiones/guardarSupervision",
                    traditional: true,
                    data: {
                        datosS: [supervisionE],
                    },
                    success: function (response) {
                        if (response.success) {
                            alert(response.responseText);
                           
                        } else {
                            alert(response.responseText);
                        }
                    },
                    error: function (response) {
                        alert("Hubo un error, no se pudieron guardar los datos, contacte con el administrador del sistema");
                    }
                });
            });
        });
    </script>


<h2>Personas Supervisión </h2>

<form asp-action="PersonaSupervision" method="get">
    <div class="form-actions no-color">
        <p>
            Búsqueda por nombre o causa penal: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Buscar" class="btn btn-default" /> |
            <a asp-action="PersonaSupervision">Regresar al listado completo</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="PersonaSupervision" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Nombre</a>
            </th>
            <th>
                <a asp-action="PersonaSupervision" asp-route-sortOrder="@ViewData["CausaPenalSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Causa Penal</a>
            </th>
            <th>
                <a asp-action="PersonaSupervision" asp-route-sortOrder="@ViewData["EstadoCumplimientoSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Estado de supervisión</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.personaVM.Paterno) @Html.DisplayFor(modelItem => item.personaVM.Materno) @Html.DisplayFor(modelItem => item.personaVM.Nombre)  </td>
            <td>
                @Html.DisplayFor(modelItem => item.causapenalVM.CausaPenal)
            </td>
            <th>
                <form asp-action="PersonaSupervision" >
                    <select class="form-control" name="supervisionE" id="supervisionE"
                            asp-items="@(new SelectList(ViewBag.listaEstadoSupervision, "Value", "Text", @item.supervisionVM.EstadoSupervision))">
                    </select>
                </form>
            </th>
            <th>
                <form asp-action="PersonaSupervision" asp-route-id="@item.supervisionVM.IdSupervision" asp-route-id="@item.supervisionVM.EstadoCumplimiento" >
                    <input type="submit" value="Guardar Estado de Supervisión" class="btn btn-primary" />
                </form>

                </th>
            <td>
                <a type="button" class="btn btn-default" id="domicilio" href="/Supervisiones/Supervision/@item.supervisionVM.IdSupervision">Edición</a>
            </td>
        </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="PersonaSupervision"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Anterior
</a>
<a asp-action="PersonaSupervision"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Siguiente
</a>

