    </div>
    <div class="col-md-12 text-center">
    @if (@item.personaVM.Candado == 0)
    {
        <button class="btn btn-primary btn-lg fa fa-unlock" onclick="candado(@item.personaVM.IdPersona,true)"></button>
    }else
    {
        <button title="@item.personaVM.MotivoCandado" class="btn btn-primary btn-lg fa fa-lock" onclick="candado(@item.personaVM.IdPersona,false)"></button>    
    }
    <a class="btn btn-info btn-lg fa fa-calendar" href="@("http://10.6.60.190/Personas/PresentacionPeriodicaPersona/"+item.personaVM.IdPersona)" target="_blank"></a>
    </div>

break;
}
