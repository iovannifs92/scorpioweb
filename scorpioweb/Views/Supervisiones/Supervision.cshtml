<script>
    function candado(id, candado) {

        var personaidpersona = id;
        let text;
        if (candado == true) {
            let razon = prompt("Razón de Bloqueo", "");
            if (razon == null || razon == "") {
                text = "NA";
            } else {
                text = razon;
            }
        } else {
            text = "NA";
        }

        $.ajax({
            type: "POST",
            dataType: "json",
            url: "/Supervisiones/LoockCandado",
            traditional: true,
            data: {
                datoCandado: [candado, personaidpersona, text],
            },
            success: function(response) {
                if (response.success) {
                    location.reload();
                } else {
                    alert(response.responseText);
                }
            },
            error: function(response) {
                location.reload();
            }
        });
    }
</script>



@foreach (var item in ViewData["joinTablesSupervision"] as IEnumerable<scorpioweb.Models.SupervisionPyCP>)
{
    <h2 class="blockquote text-center"><a href="@("http://10.6.60.190/Personas/Details/"+item.personaVM.IdPersona)" target="_blank">@item.personaVM.Paterno @item.personaVM.Materno @item.personaVM.Nombre</a></h2>
    
    <div class=col-md-6>
        <h3 style="text-align:left" class="blockquote text-center">Id Persona:</h3>
        <h3 style="text-align:center" class="blockquote text-center"><a href="@("http://10.6.60.190/Personas/Procesos/"+item.personaVM.IdPersona)" target="_blank">@item.personaVM.IdPersona</a></h3>
    </div>
    <div class=col-md-6>
        <h3 style="text-align:center" class="blockquote text-center">Causa Penal:</h3>
