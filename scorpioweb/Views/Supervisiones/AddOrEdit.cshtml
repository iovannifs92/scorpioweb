@model scorpioweb.Models.Fraccionesimpuestas

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdFracciones" />
            <div class="form-group">
                <label class="control-label">Tipo de Fracción</label>
                <select class="form-control" name="Tipo" id="Tipo"
                        asp-items="@(new SelectList(ViewBag.listaFracciones, "Value", "Text", @ViewBag.idFraccion))">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Autoridad" class="control-label"></label>
                <input asp-for="Autoridad" class="form-control" />
                <span asp-validation-for="Autoridad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input type="date" asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaTermino" class="control-label"></label>
                <input type="date" asp-for="FechaTermino" class="form-control" />
                <span asp-validation-for="FechaTermino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Se dio Cambio</label>
                <select class="form-control" name="Estado" id="Estado"
                        asp-items="@(new SelectList(ViewBag.listaCumplimiento, "Value", "Text", @ViewBag.idCumplimiento))">
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Se dio Cambio</label>
                <select class="form-control" name="FiguraJudicial" id="FiguraJudicial"
                        asp-items="@(new SelectList(ViewBag.listaFiguraJudicial, "Value", "Text", @ViewBag.idFiguraJudicial))">
                </select>
            </div>
            <input type="hidden" asp-for="SupervisionIdSupervision" />
            <div class="input-group">
                <button type="submit" value="Guardar" class="btn btn-success"><i class="fa fa-save"></i> Guardar</button>
            </div>
        </form>
    </div>
</div>
