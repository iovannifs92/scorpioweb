@model scorpioweb.Models.Fraccionesimpuestas

@{
    ViewData["Title"] = "EditFraccionesimpuestas";
}

<h2>Fracciones impuestas</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditFraccionesimpuestas">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdFracciones" />
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autoridad" class="control-label"></label>
                <input asp-for="Autoridad" class="form-control" />
                <span asp-validation-for="Autoridad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha de Inicio</label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha de Término</label>
                <input asp-for="FechaTermino" class="form-control" />
                <span asp-validation-for="FechaTermino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evidencia" class="control-label"></label>
                <input asp-for="Evidencia" class="form-control" />
                <span asp-validation-for="Evidencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Figura Judicial</label>
                <select class="form-control" name="FiguraJudicial"
                        asp-items="@(new SelectList(ViewBag.listaFiguraJudicial, "Value", "Text", @ViewBag.idFiguraJudicial))">
                </select>
            </div>
            <input type="hidden" asp-for="SupervisionIdSupervision" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
