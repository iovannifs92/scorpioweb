
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Causapenal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Cnpp</label>
                <select required class="form-control" name="cnpp" id="cnpp">
                    <option value="SI">Si</option>
                    <option value="No">No</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Juez</label>
                <input required name="juez" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Cambio</label>
                <select required class="form-control" name="Cambio" id="Cambio">
                    <option value="SI">Si</option>
                    <option value="No">No</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">CausaPenal</label>
                <input required name="cp" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">Delito</button>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="exampleModalLongTitle">Delito</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="form-group col-md-12">
                <label class="control-label">Tipo</label>
                <input required name="tipo" type="text" class="form-control" />
            </div>
            <div class="form-grou col-md-12">
                <label class="control-label">Modalidad</label>
                <input required name="modalidad" type="text" class="form-control" />
            </div>
            <div class="form-group col-md-12">
                <label class="control-label">Espesifique Delito</label>
                <input required name="Edelito" type="text" class="form-control" />
            </div>
            
            <div class="modal-footer" >
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
