@model scorpioweb.Models.Causapenal

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Causapenal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCausaPenal" />
            <div class="form-group">
                <label class="control-label">Cnpp</label>
                <select class="form-control" name="Cnpp"
                        asp-items="@(new SelectList(ViewBag.listaCnpp, "Value", "Text", @ViewBag.idCnpp))">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Juez" class="control-label"></label>
                <input asp-for="Juez" class="form-control" />
                <span asp-validation-for="Juez" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cambio</label>
                <select class="form-control" name="Cambio"
                        asp-items="@(new SelectList(ViewBag.listaCambio, "Value", "Text", @ViewBag.idCambio))">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CausaPenal" class="control-label"></label>
                <input asp-for="CausaPenal" class="form-control" />
                <span asp-validation-for="CausaPenal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

