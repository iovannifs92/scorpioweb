    <div class="col-md-12">
        <form onsubmit="return confirm('¿Deseas guardar datos?');" asp-action="CreateDelito" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-12 autocomplete">
                <label class="control-label">Tipo</label>
                <input required name="tipoD" id="tipoD" type="text" maxlength="150" class="form-control" />
            </div>
            <div class="form-group col-md-12">
                <label class="control-label">Modalidad</label>
                <input name="Modalidad" type="text" class="form-control" />
            </div>
            <div class="form-group col-md-12">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Guardar
                </button>
            </div>
            <input name="id" type="hidden" value="@ViewBag.idDelito" />
        </form>
    </div>
</div>
