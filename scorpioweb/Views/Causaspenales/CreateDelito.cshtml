
<h2>Create Delito</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDelito">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Tipo</label>
                <input required name="Tipo" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Modalidad</label>
                <input required name="Modalidad" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Especifique delito</label>
                <input required name="EspecificarDelito" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a lista</a>
</div>