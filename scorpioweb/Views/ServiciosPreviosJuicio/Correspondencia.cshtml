	// (FUNCIONA CON LA CLASE DE LOS CHECK BOXES EN _RECIBIRCORRESPONDENCIA)
		$(document).on('change', '.checkbox-entregadoRecibido', function() {
			const $checkbox = $(this);
			const id = $checkbox.data('id');
			const tipo = $checkbox.data('tipo');

			//si se selecciona el check de recibido tenemos que verificar si primero ya se selecciono la persona que recibe
			if (tipo === 'recibido')
			{

				const $select = $(`select[name="QuienRecibe_${id}"]`);//obtiene el valor del select del id del checkbox
				let quienRecibe = '';

				if ($select.length) { //si no esta vacio entra aqui			
					quienRecibe = ($select.val() || '').toString().trim();
				} else {
					//se hace como medida en caso de que si tenga algo
					const $cell = $checkbox.closest('tr').find('.quien-recibe-cell');
					
					if ($cell.length) {
						quienRecibe = $cell.text().trim();
					} else {
				     		quienRecibe = $checkbox.closest('tr').find('td').filter(function() {
							return $(this).find('select').length === 0 && $(this).text().trim().length > 0;
						}).first().text().trim();
					}
				}



				if (!quienRecibe) {
					//si llega AQUI ES POR QUE NO SE SELECCIONO A NADIE
					Swal.fire({
						icon: "error",
						title: "Quien recibe?",
						text: 'Selecciona la persona que va a recibir',
						timer: 1000,
						showConfirmButton: true
					});
					// Always force checkbox back to unchecked state (DOM property + jQuery)
					$checkbox.prop('checked', false);
					if ($checkbox[0]) $checkbox[0].checked = false;

					// Ensure the UI updates reliably (use next tick)
					setTimeout(function () {
						$checkbox.prop('checked', false);
						if ($checkbox[0]) $checkbox[0].checked = false;
					}, 0);

					// Update stored previous state as unchecked
					$checkbox.data('previousChecked', false);
					return;
				}
				//si llega hasta aqui si se tiene seleccionado a alguine
				$checkbox.prop('disabled', true); // se desactiva mientras guarda	
				
				modificarCorrespondencia(id, tipo, this, quienRecibe);
				
			} 
			else
			{
	

				modificarCorrespondencia(id, tipo, this);
			}
		});

