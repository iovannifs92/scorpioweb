@model PaginatedList<scorpioweb.Models.ReinsercionMCYSCPLCCURSVM>


@{
    ViewData["Title"] = "Personas por canalizar";
    Layout = "/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <form asp-action="index" method="get">
        <div class="form-actions no-color">
            <p>
                Búsqueda: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
                <button type="submit" class="btn btn-default">
                    <i class="fa fa-search"></i>
                    Buscar
                </button> |
                <a asp-action="index">Regresar al listado completo</a>
            </p>
        </div>
    </form>
<table class="table">
    <thead>
        <tr>
                <th>
                   IdTabla
                </th>
                <th>
                   Nombre
                </th>
                <th>
                   ClaveUnica
                </th>
                <th>
                    Area
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdTabla</td>
                <td>@item.Paterno @item.Materno @item.Nombre</td>
                <td>@item.ClaveUnica</td>
                <td>@item.NomTabla</td>
                @*<td>
                <a asp-action="Edit" asp-route-id="@item.IdReinsercion">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdReinsercion">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdReinsercion">Delete</a>
                </td>*@
                <td>
                    <a type="button" title="Canalizar" asp-action="Canaliza" asp-route-id="@item.IdTabla" asp-route-nomTabla="@item.NomTabla">
                           <i class="btn btn-info fa fa-share"> Canalizar</i>
                    </a>  
                    <a type="button" title="Información" asp-action="Canaliza" asp-route-id="@item.IdTabla" asp-route-nomTabla="@item.NomTabla">
                            <i class="btn btn-primary fa fa-file"> Mas informacion</i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

    @{
        var prevDisabled = !Model.HasNextPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }

    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @prevDisabled">
        Anterior
    </a>
    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @nextDisabled">
        Siguiente
    </a>
    <br />
    <div>
        <a asp-action="MenuReinsercion">Regresar a Menu</a>
    </div>
   

</body>
</html>
