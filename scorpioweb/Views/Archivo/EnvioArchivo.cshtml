<form asp-action="Envioarchivo" method="get" class="mb-4">
    <div class="row g-3 align-items-end">
        <!-- Búsqueda por nombre o Id -->
        <div class="col-md-4">
            <label for="SearchString" class="form-label">Nombre o Id</label>
            <input type="text"
                   id="SearchString"
                   name="SearchString"
                   class="form-control"
                   placeholder="Buscar..."
                   value="@(ViewData["currentFilter"] ?? "")" />
        </div>
        <!-- Filtro Área -->
        <div class="col-md-3">
            <label for="areaFiltro" class="form-label">Área</label>
            <select id="areaFiltro"
                    name="areaFiltro"
                    class="form-select">
                <option value="">Todos</option>
                <option value="MCySCP" @(ViewData["AreaFiltro"]?.ToString() == "MCySCP" ? "selected" : "")>MCySCP</option>
                <option value="LC" @(ViewData["AreaFiltro"]?.ToString() == "LC" ? "selected" : "")>LC</option>
                <option value="Ejecución de Penas" @(ViewData["AreaFiltro"]?.ToString() == "Ejecución de Penas" ? "selected" : "")>Ejecución de Penas</option>
                <option value="UESPA" @(ViewData["AreaFiltro"]?.ToString() == "UESPA" ? "selected" : "")>UESPA</option>
                <option value="Servicios previos" @(ViewData["AreaFiltro"]?.ToString() == "Servicios previos" ? "selected" : "")>Servicios previos</option>
            </select>
        </div>
        <!-- Filtro Recibido -->
        <div class="col-md-2">
            <label for="recibidoFiltro" class="form-label">Recibido</label>
            <select id="recibidoFiltro"
                    name="recibidoFiltro"
                    class="form-select">
                <option value="">Todos</option>
                <option value="1" @(ViewData["RecibidoFiltro"]?.ToString() == "1" ? "selected" : "")>Sí</option>
                <option value="0" @(ViewData["RecibidoFiltro"]?.ToString() == "0" ? "selected" : "")>No</option>
            </select>
        </div>
        <!-- Filtro Revisado -->
        <div class="col-md-2">
            <label for="revisadoFiltro" class="form-label">Revisado</label>
            <select id="revisadoFiltro"
                    name="revisadoFiltro"
                    class="form-select">
                <option value="">Todos</option>
                <option value="1" @(ViewData["RevisadoFiltro"]?.ToString() == "1" ? "selected" : "")>Sí</option>
                <option value="0" @(ViewData["RevisadoFiltro"]?.ToString() == "0" ? "selected" : "")>No</option>
            </select>
        </div>
        <!-- Botón Buscar -->
        <div class="col-md-1 d-grid">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-search me-1"></i> Buscar
            </button>
        </div>
    </div>
</form>
