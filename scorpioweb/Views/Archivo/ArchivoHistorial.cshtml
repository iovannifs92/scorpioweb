@model PaginatedList<scorpioweb.Models.ArchivoControlPrestamo>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

@{
    ViewData["Title"] = "Historial";
    Layout = "/Views/Shared/_Layout.cshtml";
}


<div class="card-group" style="padding-top:2%">
    <div class="col-md-12 col-md-12">
        <h2>Historial de prestamo de Expedientes</h2>
    </div>
    <form asp-action="ArchivoHistorial" method="get">
        <div class="form-actions no-color">
            <p>
                Búsqueda por nombre: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
                <button type="submit" class="btn btn-default">
                    <i class="fa fa-search"></i>
                    Buscar
                </button>
                <a asp-action="ArchivoHistorial">Regresar al listado completo</a>
            </p>
        </div>
    </form>

    <table class="table" style="font-size:10px">
        <thead>
            <tr>
                <th>
                    <a>IdArchivo</a>
                </th>
                <th>
                    <a asp-action="ArchivoHistorial" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Nombre</a>
                </th>
                <th>
                    <a asp-action="ArchivoHistorial" asp-route-sortOrder="@ViewData["fecha_desc"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Fceha de Prestamo</a>
                </th>
                <th>
                    <a asp-action="ArchivoHistorial" asp-route-sortOrder="@ViewData["ubicacion_ase"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Fecha de Entrega</a>
                </th>
                <th>
                    <a>Entrega</a>
                </th>
                <th>
                    <a>Recibe</a>
                </th>
                <th>
                    <a>Area</a>
                </th>
                <th>
                    <a>Renovaciones</a>
                </th>

            </tr>
        </thead>
        <tbody>
            <scorpioweb.Models.ArchivoPersona>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.archivoVM.IdArchivo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.archivoVM.Paterno) @Html.DisplayFor(modelItem => item.archivoVM.Materno) @Html.DisplayFor(modelItem => item.archivoVM.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.archivoprestamoVM.FechaInicial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.archivoprestamoVM.FechaRenovacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.archivoprestamoVM.Entrega)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.archivoprestamoVM.Recibe)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.archivoprestamoVM.Area)
                        </td>      
                        <td>
                            @Html.DisplayFor(modelItem => item.archivoprestamoVM.Renovaciones)
                        </td> 
                    </tr>
                }
        </tbody>
    </table>
</div>

    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }

    <p>
        Página @(Model.TotalPages < Model.PageIndex ? 0 : Model.PageIndex) de @Model.TotalPages
    </p>
    <a asp-action="ArchivoHistorial"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @prevDisabled">
        Anterior
    </a>
    <a asp-action="ArchivoHistorial"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @nextDisabled">
        Siguiente
    </a>

    <br />
    <div style="margin-top:20px">
        <a asp-action="ArchivoMenu">Regresar al Menu</a>
    </div>
 
