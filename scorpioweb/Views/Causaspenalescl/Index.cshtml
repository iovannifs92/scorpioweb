@model PaginatedList<scorpioweb.Models.Causapenalcl>
@{
    ViewData["Title"] = "Causa penales";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    function borrarCp(id) {
        // Guardamos el ID de la causa penal seleccionada
        var idcp = id;
        var usuario = '@ViewBag.user';

        // Mostramos confirmación con SweetAlert2 antes de proceder con el borrado
        Swal.fire({
            title: '¿Desea borrar el registro?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Sí, borrar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            // Si el usuario confirma que desea borrar
            if (result.isConfirmed) {
                // Primera llamada AJAX: verificar si el registro se puede borrar
                $.ajax({
                    type: "POST",
                    dataType: "json",
                    url: "/Causaspenalescl/antesdelete",
                    traditional: true,
                    data: {
                        datocp: [idcp],
                    },
                    success: function (response) {
                        // Si el registro no se puede borrar porque está asignado
                        if (response.borrar == false) {
                            Swal.fire({
                                icon: 'error',
                                title: 'No se puede borrar',
                                text: 'No se ha borrado porque ya está asignada a una persona'
                            });
                        } else {
                            // Si se puede borrar, pedimos la razón del borrado
                            Swal.fire({
                                title: '¿Por qué desea borrar el registro?',
                                input: 'text',
                                inputPlaceholder: 'Escriba la razón...',
                                showCancelButton: true,
                                confirmButtonText: 'Aceptar',
                                cancelButtonText: 'Cancelar',
                                inputValidator: (value) => {
                                    if (!value) {
                                        return 'Debe ingresar una razón para continuar';
                                    }
                                }
                            }).then((result) => {
                                // Si el usuario confirma y escribe una razón
                                if (result.isConfirmed) {
                                    let razon = result.value || "NA";

                                    // Segunda llamada AJAX: borrar definitivamente el registro
                                    $.ajax({
                                        type: "POST",
                                        dataType: "json",
                                        url: "/Causaspenalescl/deletecp",
                                        traditional: true,
                                        data: {
                                            datocp: [id, razon, usuario],
                                        },
                                        success: function (response) {
                                            // Si el borrado fue exitoso
                                            if (response.borrar == true) {
                                                Swal.fire({
                                                    icon: 'success',
                                                    title: 'Registro borrado',
                                                    timer: 800,
                                                    text: 'El registro ha sido borrado correctamente'
                                                }).then(() => {
                                                    location.reload(); // Recargamos la página para reflejar los cambios
                                                });
                                            } else {
                                                // Si hubo un error controlado
                                                Swal.fire({
                                                    icon: 'error',
                                                    title: 'Error',
                                                    text: 'Hubo un error, no se pudieron guardar los datos. Contacte con el administrador del sistema.'
                                                });
                                            }
                                        },
                                        error: function (response) {
                                            // Si ocurre un error inesperado
                                            Swal.fire({
                                                icon: 'error',
                                                title: 'Error',
                                                text: response.error || 'Hubo un error inesperado. Contacte con el administrador del sistema.'
                                            });
                                        }
                                    });
                                }
                            });
                        }
                    },
                    error: function (response) {
                        // Si la primera solicitud falla
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.error || 'Hubo un error inesperado. Contacte con el administrador del sistema.'
                        });
                    }
                });
            }
        });
    }
</script>


<h1>Control de Causas Penales</h1>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Búsqueda: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <button type="submit" class="btn btn-default">
                <i class="fa fa-search"></i>
                Buscar
            </button> |
            <a asp-action="Index">Regresar al listado completo</a>
        </p>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus"> Crear nueva Casua Penal</i>
    </a>
</p>

<table class="table">
    <thead>
        <tr>
                <th>
                    Cnpp
                </th>
                <th>
                    Juez
                </th>
                <th>
                    Cambio
                </th>
                <th>
                    Distrito
                </th>
                <th>
                    CausaPenal
                </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cnpp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Juez)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cambio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distrito)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CausaPenal)
            </td>
            <td>
                <a style="margin-bottom:5px; width: 100%" asp-action="Edit" asp-route-id="@item.IdCausaPenalcl" class="btn btn-success">
                    <i class="fa fa-pencil"> Edit</i>
                </a>
                <a style="margin-bottom:5px; width: 100%" asp-action="PersonaAsignadas" asp-route-id="@item.IdCausaPenalcl" class="btn btn-info">
                        <i class="fa fa-eye"> PersonaAsignadas</i>
                </a>
                <a style="margin-bottom:5px; width: 100%" asp-action="Asignacion" asp-route-id="@item.IdCausaPenalcl" class="btn btn-primary">
                        <i class="fa fa-plus"> Asignacion</i>
                </a>
            </td>
            <td>
                <a style="margin-bottom:5px" onclick="borrarCp(@item.IdCausaPenalcl)" class="btn btn-danger">
                    <i class="fa fa-trash"> Delete</i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<p>
    Página @(Model.TotalPages < Model.PageIndex ? 0 : Model.PageIndex) de @Model.TotalPages
</p>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Anterior
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Siguiente
</a>