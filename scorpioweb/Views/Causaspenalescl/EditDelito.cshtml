@model scorpioweb.Models.Delitocl

@{
    ViewData["Title"] = "EditarDelito";
}


<h2>Editar Delito</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDelito">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDelitocl" />
            <input type="hidden" asp-for="CausaPenalclIdCausaPenalcl" />
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" maxlength="200" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modalidad" class="control-label"></label>
                <input asp-for="Modalidad" maxlength="200" class="form-control" />
                <span asp-validation-for="Modalidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="EditCausas" asp-route-id="@Model.CausaPenalclIdCausaPenalcl">Regresar a Causa</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}