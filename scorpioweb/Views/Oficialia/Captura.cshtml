                    response(this.element.children("option").map(function () {
                        var text = $(this).text();

                        for (i = 0; i < res.length; i++) {
                            if (!this.value || (request.term && !matcher[i].test(text)))
                            return;
                        }
                        return {
                            label: text,
                            value: text,
                            option: this
                        };

