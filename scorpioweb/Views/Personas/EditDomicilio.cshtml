                    }
                    else {
                        items += "<option value='" + municipio.value + "'>" + municipio.text + "</option>";
                    }
                });
                $('#municipioD').html(items);
            });
            localStorage.setItem('municipioD',$('#municipioD').val());

            $.ajaxSetup({
                async: true
            });
        });
        $('#paisD').change(function () {
