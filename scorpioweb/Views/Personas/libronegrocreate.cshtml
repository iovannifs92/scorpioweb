@model scorpioweb.Models.Libronegro

<h1>Libro negro</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="libronegrocreate" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" readonly asp-for="Idlibronegro" class="form-control" />
            <div class="form-group col-md-4">
                <label asp-for="Paterno" class="control-label"></label>
                <input asp-for="Paterno" class="form-control" />
                <span asp-validation-for="Paterno" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Materno" class="control-label"></label>
                <input asp-for="Materno" class="form-control" />
                <span asp-validation-for="Materno" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label class="control-label">Causa penal</label>
                <input asp-for="Cp" class="form-control" />
                <span asp-validation-for="Cp" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label class="control-label">Numerdo de Telefono (10 Dígitos)</label>
                <input asp-for="Telefono" pattern="[0-9]{10}" maxlength="10" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="F1" class="control-label"></label>
                <input asp-for="F1" class="form-control" type="date" />
                <span asp-validation-for="F1" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="F2" class="control-label"></label>
                <input asp-for="F2" class="form-control" type="date" />
                <span asp-validation-for="F2" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="F3" class="control-label"></label>
                <input asp-for="F3" class="form-control" type="date" />
                <span asp-validation-for="F3" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="F4" class="control-label"></label>
                <input asp-for="F4" class="form-control" type="date" />
                <span asp-validation-for="F4" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <input asp-for="Supervisor" readonly type="hidden" class="form-control"/>
                <span asp-validation-for="Supervisor" class="text-danger" value="NA"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary fa fa-save">
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

