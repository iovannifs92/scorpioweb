    @if(ViewBag.Destacado == 0){
            <a type="button" class="btn btn-default" id="borrar" title="Destacado"  onclick="Destacados(@ViewBag.idContacto,true)">
        <i class="fa fa-star"></i> 
        </a>
    }else{
