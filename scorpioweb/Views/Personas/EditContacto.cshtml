<script>
    $(document).ready(function () {        
        $('#Estado').change(function () {
            $.ajaxSetup({
                async: false
            });
            localStorage.setItem('municipioAnterior',$('#Municipio').val());
            var url = '@Url.Content("~/")' + "Personas/GetMunicipio";
            var ddlsource = '#Estado';
            $.getJSON(url, { EstadoId: $(ddlsource).val() }, function (data) {
                var items = "<option value=''>Sin municipio</option>";
                $("#Municipio").empty();
                $.each(data, function (i, municipio) {
                    if(municipio.text == document.getElementById("Municipio").text) {
                        items += "<option value='" + municipio.value + "' selected>" + municipio.text + "</option>";
                    }
                    else {
                        items += "<option value='" + municipio.value + "'>" + municipio.text + "</option>";
                    }
                });
                $('#Municipio').html(items);
            });
            localStorage.setItem('Municipio',$('#Municipio').val());
            $.ajaxSetup({
                async: true
            });
        });

        $('#Categoria').change(function () {
            var dat = $(this).children("option:selected").val();
            if (dat == "ESTADO" || dat == "MUNICIPIO") {
                $("#DivEstado").css("display", "block");
            }
            else {
                $("#DivEstado").css("display", "none");
            }

            if (dat == "MUNICIPIO" ) {
                $("#DivMunicipio").css("display", "block");
            }
            else {
 
                $("#DivMunicipio").css("display", "none");
            }
        }); 
    });


    function Destacados(id, destacado) {
        var idContacto = id;
        let text;
        $.ajax({
            type: "POST",
            dataType: "json",
            url: "/Personas/Destacado",
            traditional: true,
            data: {
                datoContacto: [destacado, idContacto],
            },
            success: function (response) {
                if (response.success) {
                   location.reload();
                } else {
                    alert(response.responseText);
                }
            },
            error: function (response) {
                location.reload();
            }
        });
    };

</script>



<div style="text-align: center;" class="col-md-4" asp-for="Idcontactos">
